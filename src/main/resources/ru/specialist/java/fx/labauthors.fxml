<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?language javascript?>

<!--
 Controller - пакет, в котором создаются классы для программирования кнопки
                для лабораторной работы создан LabAuthorButton
 fx:controller="ru.specialist.java.fx.controller.LabAuthorButton" - указываем путь к классу
 -->

<VBox alignment="TOP_CENTER" prefHeight="300.0" prefWidth="450.0" spacing="15" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.specialist.java.fx.controller.LabAuthorButton">

    <Label>Create new author</Label>

    <GridPane alignment="TOP_CENTER" hgap="40.0" vgap="10">

        <Label GridPane.columnIndex="1" GridPane.rowIndex="1">Author_id: </Label>
            <Label fx:id="authorId" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Label GridPane.columnIndex="3" GridPane.rowIndex="1">Book_id: </Label>
            <Label fx:id="bookId" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                <padding>
                    <Insets left="15" right="10" />
                </padding>
                <VBox.margin> <Insets bottom="-20.0" left="10.0" right="10.0" top="-10.0" /> </VBox.margin>

    </GridPane>

    <GridPane hgap="25.0" vgap="10.0">

        <Label GridPane.columnIndex="0" GridPane.rowIndex="3">First name: </Label>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="4">Second name: </Label>
        <Label GridPane.columnIndex="0" GridPane.rowIndex="5">Title: </Label>
        <TextField fx:id="label_fn" promptText="First name" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField fx:id="label_sn" promptText="Second name" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <TextField fx:id="label_title" promptText="Title" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <padding>
                    <Insets left="15" right="10" />
                </padding>
                      <VBox.margin> <Insets top="-10.0" /> </VBox.margin>
                <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints minWidth="250.0" />
                </columnConstraints>
    </GridPane>

    <Button minHeight="20.0" minWidth="100.0" onAction="#onButtonClick" prefHeight="30.0" prefWidth="100.0" textAlignment="CENTER" textFill="#4b07ea">
            Create
                <VBox.margin> <Insets top="20.0" /> </VBox.margin>
    </Button>

   <padding>
      <Insets top="20.0" />
   </padding>


</VBox>
