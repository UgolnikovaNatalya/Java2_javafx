<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?language javascript?>

<!--
 Controller - класс который выполняет действие(обрабатывает нажатие кнопки)
              требует отдельного класса!
 fx:controller="ru.specialist.java.fx.controller.ButtonController" - указываем путь к классу
 -->

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.specialist.java.fx.controller.ButtonController">
        <HBox alignment="CENTER" spacing="10">
            <Button>1</Button>
            <Button text="2">2</Button>
            <Button>3</Button>
        </HBox>
        <HBox alignment="CENTER" spacing="20">
            <Button text="4">4</Button>
            <Button>5</Button>
            <Button>6</Button>
            <padding>
                <Insets bottom="0" left="50" right="50" top="0" />
            </padding>
        </HBox>
    <GridPane alignment="CENTER" hgap="20" vgap="10">
            <TextField GridPane.columnIndex="0" GridPane.rowIndex="0">7</TextField>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="0">8</TextField>
            <TextField GridPane.columnIndex="2" GridPane.rowIndex="0">9</TextField>
        <padding>
            <Insets left="50" right="50" />
        </padding>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <Button onAction="#onButtonClick">Click me!</Button>
    <Label fx:id="myLabel" />
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="50.0" />
   </padding>

</VBox>
